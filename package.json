{
  "name": "mtg-tourney-app",
  "version": "0.1.2",
  "description": "A server which receives pdfs of Player Pairings, and displays that data in mobile friendly, easy-to-check-from-your-seat way. No more stampedes to the pairings sheet!",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/server.js",
    "start-dev": "nodemon server/server.js",
    "test": "node test/*.js",
    "build": "NODE_ENV=production browserify client/index.js -g uglifyify -o public/bundle.js",
    "build-dev": "watchify client/index.js -o public/bundle.js -dv"
  },
  "browserify": {
    "transform": [
      "babelify",
      "yo-yoify"
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mixmix/mtg-tourney-app.git"
  },
  "keywords": [
    "magic",
    "mtg",
    "tournament"
  ],
  "author": "mixmix",
  "license": "MIT",
  "devDependencies": {
    "babel-preset-es2015": "^6.9.0",
    "babelify": "^7.3.0",
    "browserify": "^13.0.1",
    "nodemon": "^1.9.2",
    "uglifyify": "^3.0.2",
    "watchify": "^3.7.0",
    "yo-yoify": "^3.3.0"
  },
  "dependencies": {
    "body-parser": "^1.15.2",
    "compression": "^1.6.2",
    "express": "^4.14.0",
    "formidable": "^1.0.17",
    "inu": "^3.0.2",
    "mtg-tourney-parser": "^0.2.0",
    "pull-defer": "^0.2.2",
    "xhr": "^2.2.0",
    "yo-yo": "^1.2.2"
  }
}
